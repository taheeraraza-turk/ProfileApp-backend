{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
       "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js",
       "methods": ["GET", "POST", "OPTIONS", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "../frontend/build/index.html" 
    }
  ]
}
  
